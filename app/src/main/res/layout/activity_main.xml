<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="world.trav.uiloader.sample.view.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Reset Screen"
            app:layout_constraintBottom_toBottomOf="@+id/btnShowError"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnShowContent"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:text="Load Data"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnShowLoader"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Show Loader"
            app:layout_constraintBottom_toBottomOf="@+id/btnShowContent"
            app:layout_constraintStart_toEndOf="@+id/btnShowContent" />

        <Button
            android:id="@+id/btnShowError"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Show Error"
            app:layout_constraintBottom_toBottomOf="@+id/btnShowLoader"
            app:layout_constraintStart_toEndOf="@+id/btnShowLoader" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnShowError"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <include
                android:id="@+id/loading_container"
                layout="@layout/loader" />

            <include
                android:id="@+id/content_container"
                layout="@layout/content" />

        </FrameLayout>

    </android.support.constraint.ConstraintLayout>
</layout>
